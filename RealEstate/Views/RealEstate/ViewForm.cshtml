@model ViewFormModel

@{
    ViewData["Title"] = Model.Id > 0 ? "Edit" : "Add A NEW Real State";
}

<form asp-action="@(Model.Id>0? "Edit":"Create")" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
  <fieldset>
        <legend class=" shadow-lg p-3 mb-2 bg-white rounded"><i class="bi bi-house-add"></i> @(Model.Id > 0? "Edit" : "Add A NEW") Real STATE</legend>
    <div class="form-group row">
<div class="form-group">
    <label asp-for="Price" class="form-label mt-4"></label>
    <input asp-for="Price" value="@(Model.Id>0?Model.Price:"1000")" max="90000000" min="1000" type="number" class="form-control" id="exampleInputEmail1"  placeholder="Enter Price">
                <span class="text-warning" asp-validation-for="Price"></span>
                <small id="emailHelp" class="form-text text-muted">price for Dollar <i class="bi bi-currency-dollar"></i></small>
    
</div>

<div class="form-group">
    <label asp-for="CategoryId" class="form-label mt-4"></label>
    <select class="form-select" asp-for="CategoryId" asp-items="@Model.categories">

        <option value=""> select Your Category </option>

                </select>                   
                <span class="text-warning" asp-validation-for="CategoryId"></span>
</div>


            
            <div class="form-group">
                <label asp-for="Address" for="exampleTextarea" class="form-label mt-4"></label>
                <textarea asp-for="Address" class="form-control" id="exampleTextarea" rows="3"></textarea>
                <span class="text-warning" asp-validation-for="Address"></span>




            </div>

            <div class="form-group ">
                <label asp-for="Description"  class="form-label mt-4"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span class="text-warning" asp-validation-for="Description"></span>

            </div>
            <div class="form-group">
                <label asp-for="Image" class="form-label mt-4">Add cover</label>
                <input asp-for="Image" class="form-control" type="file" id="formFile">
                <span class="text-warning" asp-validation-for="Image"></span>

            </div>
            
            
                <legend class="mt-4">Choose </legend>
                @foreach(var i in Model.Stats){
                  <div class="form-check">
                    <input class="form-check-input" type="radio"  asp-for="RentOrSaleId" optionsRadios2" value="@i.Id">
                    <label asp-for="RentOrSaleId" class="form-check-label" >
                        

                   @i.Name
                    </label>
                    <span class="text-warning" asp-validation-for="RentOrSaleId"></span>
            </div>
            }
          

           
            
        </div>
        <br />
        <button type="submit" class="btn btn-outline-primary"> <i class="bi bi-house-check-fill"></i> Add</button>
        <a style="margin-bottom:29px" class="btn btn-outline-primary " asp-action="Index"><i class="bi bi-x-octagon"></i>Cancel</a>
    </fieldset>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}