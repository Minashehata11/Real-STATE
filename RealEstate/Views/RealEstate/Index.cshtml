@model IEnumerable<RealState>

@{
    ViewData["Title"] = "RealState";
}

<a class="btn btn-outline-primary m-5" asp-action="Create"> <i class="bi bi-house-add-fill"></i>  ADD new Real state</a>
<hr />

<div class="mt-4">
    @if (!Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>...Not REAL STATE found Here!
        </div>
    }
</div>

<table class=" table-bordered table tabletable-striped" style="width:100%">

    <thead>
        <tr>
            <th>
                Category 
            </th>
            <th>
             Rent Or Sale
            </th>

            <th>
                Price<i class="bi bi-cash-stack"></i> 
            </th>

            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>

   <tbody>
        @foreach(var i in Model)
        {
        <tr>
            <td width="20%"> @i.category.Name.ToUpper()  </td>


            <td width="20%"> @i.RentOrSale.Name</td>


                <td width="20%"> @i.Price <i class="bi bi-currency-dollar"></td>

                <td width="40%">
                    <img class="m-3" src="~/assets/images/@i.Image" style="width:300px" />
                    </td>

            <td>
                <div class="w-75 btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@i.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-house-heart-fill"></i>
                            Details
                        </a>
                        <a asp-action="Edit" asp-route-id="@i.Id" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i>
                            Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@i.Id" class="btn btn-outline-primary">
                            <i class="bi bi-trash3"></i>
                            Delete
                        </a>
                </div>
            </td>
        
        </tr>
}
   </tbody>

</table>
 